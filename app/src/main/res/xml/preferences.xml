<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:defaultValue="0.0"
        android:key="@string/calibration_pref"
        android:numeric="decimal"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:summary="@string/calibrate_summary"
        android:title="@string/calibrate_title" />

    <SwitchPreference
        android:defaultValue="true"
        android:key="@string/save_local_pref"
        android:summary="@string/save_local_summary"
        android:title="@string/save_local_title" />

    <ListPreference
        android:defaultValue="iOS"
        android:entries="@array/databaseSelectorArray"
        android:entryValues="@array/databaseSelectorValues"
        android:key="@string/data_source_pref"
        android:summary="@string/choose_source_summary"
        android:title="@string/choose_source_title" />

    <Preference
        android:key="@string/logout_preference"
        android:summary="When logged out, you are unable to upload to the database"
        android:title="Logout my of Sound Map account" />

</PreferenceScreen>