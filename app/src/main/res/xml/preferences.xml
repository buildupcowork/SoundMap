<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:defaultValue="0.0"
        android:key="@string/calibration_pref"
        android:numeric="decimal"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:summary="@string/calibrate_summary"
        android:title="@string/calibrate_title" />

    <SwitchPreference
        android:defaultValue="false"
        android:key="@string/local_only_pref"
        android:summary="@string/local_only_summary"
        android:title="@string/local_only_title" />

    <Preference
        android:key="@string/logout_preference"
        android:summary="When logged out, you are unable to upload to the database"
        android:title="Log out of my Sound Map account" />

    <Preference
        android:key="@string/about_preference"
        android:title="About Sound Map" />

</PreferenceScreen>